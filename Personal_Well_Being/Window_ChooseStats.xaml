<Window x:Class="Personal_Well_Being.Window_ChooseStats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Well_Being"
        mc:Ignorable="d"
        Title="Window_ChooseStats" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="18" Foreground="Goldenrod" FontFamily="Old English Text MT" TextAlignment="Center" Grid.Row="0">Choose Stats</TextBlock>

        <Grid Margin="20, 0, 20, 0" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="16">Select the Stats that mean the most to you.</TextBlock>
                
                    <CheckBox x:Name="MoodBox" FontSize="14">Mood</CheckBox>
                    <CheckBox x:Name="FitnessBox" FontSize="14">Fitness</CheckBox>
                    <CheckBox x:Name="CareerBox" FontSize="14">Career</CheckBox>
                    <CheckBox x:Name="FriendsBox" FontSize="14">Friends</CheckBox>
                    <CheckBox x:Name="CompanionshipBox" FontSize="14">Companionship</CheckBox>
                    <CheckBox x:Name="SpiritualityBox" FontSize="14">Spirituality</CheckBox>
                    <CheckBox x:Name="SchoolBox" FontSize="14">School</CheckBox>
                    <CheckBox x:Name="FamilyBox" FontSize="14">Family</CheckBox>

                </StackPanel>
            </Grid>

        </Grid>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="AcceptButton" Background="Goldenrod" FontFamily="Old English Text MT" FontSize="25" Margin="20" Grid.Column="0" Click="AcceptButton_Click">Accept</Button>
                <Button x:Name="CancelButton" Background="Goldenrod" FontFamily="Old English Text MT" FontSize="25"  Margin="20" Grid.Column="1" Click="CancelButton_Click">Cancel</Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
