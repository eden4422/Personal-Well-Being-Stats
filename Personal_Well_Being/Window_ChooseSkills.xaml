<Window x:Class="Personal_Well_Being.Window_ChooseSkills"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Well_Being"
        mc:Ignorable="d"
        Title="Window_ChooseSkills" Height="450" Width="800">
    <Grid>
 
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="18" TextAlignment="Center" Foreground="Goldenrod" FontFamily="Old English Text MT" Grid.Row="0">Choose Skills</TextBlock>

        <Grid Margin="20, 0, 20, 0" Grid.Row="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="16">Select your Skills.</TextBlock>

                    <CheckBox x:Name="Painting" FontSize="14" Content="Painting"></CheckBox>
                    <CheckBox x:Name="Writing" FontSize="14" Content="Writing"></CheckBox>
                    <CheckBox x:Name="Storytelling" FontSize="14" Content="Storytelling"></CheckBox>
                    <CheckBox x:Name="Dancing" FontSize="14" Content="Dancing"></CheckBox>
                    <CheckBox x:Name="Dressmaking" FontSize="14" Content="Dressmaking"></CheckBox>
                    <CheckBox x:Name="Blacksmithing" FontSize="14" Content="Blacksmithing"></CheckBox>
                    <CheckBox x:Name="Graphic" FontSize="14" Content="Graphic Design"></CheckBox>
                    <CheckBox x:Name="Acting" FontSize="14" Content="Acting"></CheckBox>
                    <CheckBox x:Name="Knitting" FontSize="14" Content="Knitting"></CheckBox>
                    <CheckBox x:Name="JewelryMaking" FontSize="14" Content="Jewelry-Making"></CheckBox>
                    <CheckBox x:Name="LeatherWorking" FontSize="14" Content="Leather-Working"></CheckBox>
                    <CheckBox x:Name="Pottery" FontSize="14" Content="Pottery"></CheckBox>
                    <CheckBox x:Name="Hairstyling" FontSize="14" Content="Hairstyling"></CheckBox>
                    <CheckBox x:Name="Origami" FontSize="14" Content="Origami"></CheckBox>
                    <CheckBox x:Name="Calligraphy" FontSize="14" Content="Calligraphy"></CheckBox>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock>Create Skills by entering them below:</TextBlock>
                    <TextBox x:Name="SkillInput"></TextBox>
                    <Button x:Name="AddSkill" Width="100" Click="AddSkill_Button">Add Skill</Button>
                    
                    <ListView x:Name="listView" Margin="15">
                        <ListViewItem>Carpentry</ListViewItem>
                    </ListView>
                </StackPanel>
            </Grid>

        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="AcceptButton" Background="Goldenrod" FontFamily="Old English Text MT" FontSize="25" Margin="20" Grid.Column="0" Click="AcceptButton_Click">Accept</Button>
                <Button x:Name="CancelButton" Background="Goldenrod" FontFamily="Old English Text MT" FontSize="25" Margin="20" Grid.Column="1" Click="CancelButton_Click">Cancel</Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
