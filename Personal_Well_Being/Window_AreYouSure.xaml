<Window x:Class="Personal_Well_Being.Window_AreYouSure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Well_Being"
        mc:Ignorable="d"
        Title="Window_AreYouSure" Height="200" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" FontFamily="Old English Text MT" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20">Are you sure?</TextBlock>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            
            <Button x:Name="YepButton" Background="Goldenrod" FontFamily="Old English Text MT" Margin="20" Grid.Row="0" Click="YepButton_Click">Yep!</Button>

            <Button x:Name="NoButton" Background="Goldenrod" FontFamily="Old English Text MT" Margin="20" Grid.Row="1" Click="NoButton_Click">Nooooooo!</Button>
        </Grid>
    </Grid>
    
</Window>
